<%
const {items} = locals
%>

<div class="col-4">
    <div class="p-3">
        <%- include('partials/search', {style: 'homepage', focus: 'autofocus', msgOnFocus: template('search.placeholder'), formatUrl}) %>
        <div class="md-card getting-started mt-3">
            <h4 class="text-white fw-bold m-0">Getting Started</h4>
            <div class="docs d-flex flex-column">
                <% items.forEach(item => { %>
                    <a href="<%= item.path %>">
                        <svg width="25" height="25" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <path stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M7 17 17 7m0 0H8m9 0v9"></path>
                        </svg>
                        <%= item.prettyName %>
                    </a>
                <% }) %>
            </div>
        </div>
    </div>
</div>